generator client {
  provider = "prisma-client-js"
  // previewFeatures = ["mongodb"]
}

datasource db {
  provider = "postgresql"
  // provider = "mongodb"
  url      = env("DATABASE_URL")
}

//* Models *//
model User {
  // id           String @id @default(uuid()) @map("_id") @db.ObjectId
  id           String @id @default(uuid())
  mail         String @unique
  password     String
  name         String
  streetType   String
  streetNumber String
  department   String
  municipality String
  //@@unique([name, mail])
}
